<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Expy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="colorSecondaryVariant">@color/green_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="android:textSize">@dimen/font_nm</item>
    </style>

    <!-- Customize styles -->
    <style name="Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_nm</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Button.Outline">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Small">
        <item name="android:background">@drawable/bg_button_small</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="ClickableTextView">
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="fabSize">normal</item>
        <item name="elevation">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/green_primary</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageView.Avatar">
        <item name="android:src">@drawable/ic_no_avatar</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>