<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xdev.expy.ui.main.management.AddUpdateFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/ToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Produk"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        style="@style/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama produk">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_name"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_opened"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah sudah dibuka dan memiliki PAO?"
                android:checked="false"/>

            <TextView
                android:id="@+id/tv_help_pao"
                style="@style/ClickableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bantuan"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_help"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_expiry_date"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal kedaluwarsa/best before">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_expiry_date"
                    style="@style/EditText.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_opened_date"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal dibuka">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_opened_date"
                    style="@style/EditText.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_pao"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PAO (bulan)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_pao"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hidupkan pengingat"
                android:checked="true"/>

            <TextView
                style="@style/HintTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengingat akan muncul secara berkala sebelum produkmu kedaluwarsa." />

            <Button
                android:id="@+id/btn_save"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:layout_marginTop="32dp"/>

            <Button
                android:id="@+id/btn_delete"
                style="@style/Button.Danger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>